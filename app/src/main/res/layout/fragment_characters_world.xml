<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".planet.presentation.CharactersWorldFragment">

    <ImageButton
        android:id="@+id/arrowBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2x"
        android:background="#00000000"
        android:src="@drawable/ic_arrow_left" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_1x"
        android:background="@color/white"
        android:paddingVertical="@dimen/dp_1x">

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2x"
            android:text="Название: "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/planetNameNameTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_2x"
            android:text="planet Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameTxt"
            app:layout_constraintTop_toTopOf="@+id/nameTxt" />

        <TextView
            android:id="@+id/diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1x"
            android:text="Диаметр: "
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/nameTxt"
            app:layout_constraintTop_toBottomOf="@+id/nameTxt" />

        <TextView
            android:id="@+id/diameterValueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diameter"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/dp_2x"
            app:layout_constraintStart_toEndOf="@+id/diameter"
            app:layout_constraintTop_toTopOf="@+id/diameter" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1x"
            android:text="Тип климата: "
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/diameter"
            app:layout_constraintTop_toBottomOf="@+id/diameter" />

        <TextView
            android:id="@+id/climatTypeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="climat"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/dp_2x"
            app:layout_constraintStart_toEndOf="@+id/type"
            app:layout_constraintTop_toTopOf="@+id/type" />

        <TextView
            android:id="@+id/gravitationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1x"
            android:text="Гравитация: "
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/type"
            app:layout_constraintTop_toBottomOf="@+id/type" />

        <TextView
            android:id="@+id/gravitationValueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gravitation"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/dp_2x"
            app:layout_constraintStart_toEndOf="@+id/gravitationTxt"
            app:layout_constraintTop_toTopOf="@+id/gravitationTxt" />

        <TextView
            android:id="@+id/placeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1x"
            android:text="Тип местности: "
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/gravitationTxt"
            app:layout_constraintTop_toBottomOf="@+id/gravitationTxt" />

        <TextView
            android:id="@+id/placeValueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/dp_2x"
            app:layout_constraintStart_toEndOf="@+id/placeTxt"
            app:layout_constraintTop_toTopOf="@+id/placeTxt" />

        <TextView
            android:id="@+id/populationTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1x"
            android:text="Население: "
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/placeTxt"
            app:layout_constraintTop_toBottomOf="@+id/placeTxt" />

        <TextView
            android:id="@+id/populationValueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Население"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/dp_2x"
            app:layout_constraintStart_toEndOf="@+id/populationTxt"
            app:layout_constraintTop_toTopOf="@+id/populationTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>